<%# form_with Form %>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <p>
            <%= msg %>
        </p>
    <% end %>
<% end %>

<%= form_with model: @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>
<% end %>